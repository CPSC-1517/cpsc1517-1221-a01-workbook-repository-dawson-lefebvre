@page
@model RazorPagesDemo.Pages.LottoQuickPickdModel
@{
}

@if(Model.InfoMessage is not null){
    <div class="alert-info">
        <p>@(Model.InfoMessage)</p>
    </div>
}
@if (Model.ErrorMessage is not null)
{
    <div class="alert-danger">
        <p>@(Model.ErrorMessage)</p>
    </div>
}
<h1>Lotto Quick Picks</h1>
<form method="post">
    <div>
        <label>Name</label>
        <input type="text" placeholder="Enter Name" class="form-control" asp-for="UserName" aria-label="UserName">
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="LottoMax" id="LottoMax">
        <label class="form-check-label" for="LottoMax">
            LottoMax
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="Lotto649" id="Lotto649" checked>
        <label class="form-check-label" for="Lotto649">
            Lotto649
        </label>
    </div>
    <button type ="submit" class="btn btn-primary">Generate</button>
</form>